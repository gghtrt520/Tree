/* pages/addtree.wxss */
.v-video{
  position: relative;
  width: 100%;
  height: 490rpx;
  text-align: center;
}
.v-video .cuIcon-record{
  font-size: 32px;
  line-height: 480rpx;
}
.v-video video{
  width: 100%;
}
.del-video{
  position: absolute;
  top: 0;
  right: 0;
}
.local-info{
  line-height: 2;
}
.number-tree{
  display: flex;
  margin-top: 1px;
  margin-bottom: 1px;
}
.number-tree .cu-tag{
  padding: 0;
}
.number-tree .cu-form-group{
  border-top: 0;
}
.cu-form-group .title,.cu-form-group input {
  padding-right: 14rpx;
}