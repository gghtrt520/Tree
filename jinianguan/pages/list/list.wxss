/* pages/list/list.wxss */
.list-item{
  position: relative;
  text-align: center;
}
.list-item .item-text{
  position: absolute;
  display: block;
  width: 100%;
  line-height: 2;
  bottom: 0;
  color: white;
  background-color: rgba(1, 1, 1, 0.2);
}
.page{
  height: 100vh;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  background-position: center center;
}