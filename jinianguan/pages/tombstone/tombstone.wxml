<!--pages/tombstone/tombstone.wxml-->
<view class="content" style="height:100vh; background-image: url({{backImg}});">
  <cu-custom bgColor="bg-gradual-brown" isCustom="{{true}}">
    <view slot="content">{{title}}</view>
  </cu-custom>
  <navigator url="/pages/museum/detail/detail" hover-class="none">
    <view class="avatar-c" style="background-image: url({{avatarImg}});"></view>
  </navigator>
  <view class="toolbar">
    <view class="v-tool">
      <text class="cuIcon-musicfill text-yellow"></text>
    </view>
    <view class="v-tool">
      <text class="cuIcon-like text-yellow"></text>
    </view>
    <view class="v-tool">
      <text class="cuIcon-punch text-yellow"></text>
    </view>
    <view class="v-tool">
      <text class="cuIcon-present text-yellow"></text>
    </view>
  </view>
</view>