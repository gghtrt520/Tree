.scroll-img{
  white-space: nowrap;
}
.bg-img-select{
  display: inline-block;
  width: 130rpx;
  height: 130rpx;
  margin: 0 20rpx;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center center;
}
.animationGift{
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  top: 80%;
  left: 50%;
  transform: translate(-50%,-50%);
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center center;
  opacity: 0;
}

.view-gift{
  /** 第一种写法**/
  animation-name: viewgift;
  animation-duration: 2s;
  animation-timing-function: ease-out;
  animation-iteration-count: 1;
}
@keyframes viewgift {
  /** 第一种写法**/
  0% {
    opacity: 1;
  }
  50% {
    width: 150rpx;
    height: 150rpx;
    top: 50%;
    left: 25%;
    opacity: 0.8;
  }
  100% {
    width: 1rpx;
    height: 1rpx;
    top: 25%;
    left: 50%;
    opacity: 0;
  }
}