/* pages/tombstone/tombstone.wxss */
.content{
  position: relative;
  width: 100vw;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  background-position: center center;
  overflow: hidden;
}
.avatar-c{
  position: absolute;
  width: 260rpx;
  height: 260rpx;
  border: 4rpx solid brown;
  top:25%;
  left: 50%;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center center;
  transform: translate(-50%,-25%);
}
.toolbar{
  position: absolute;
  top: 40%;
  right: 5vw;
}
.v-tool{
  background-color: rgba(255, 255, 255, 0.3);
  width: 70rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 50%;
  font-size: 50rpx;
  margin-bottom: 50rpx;
}
.bg-gradual-white .cuIcon-back{
  color: white;
}
.lipin{
  position: absolute;
  padding: 10rpx;
  width: 60rpx;
  height: 60rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  background-position: center center;
  background-color: red;
  z-index: 10;
}
