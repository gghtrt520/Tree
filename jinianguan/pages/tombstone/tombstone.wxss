.list-liwu{
  padding: 0 30rpx;
  line-height: 2;
  max-height: 230rpx;
  color: #111;
}
.cu-bar.foot.input{
  background-color: rgba(255, 255, 255, 0.6);
}
.list-pinlun{
  padding: 0 30rpx;
  margin-top: 20rpx;
  line-height: 2;
  max-height: 140rpx;
  color: #111;
}
.list-liwu view,
.list-pinlun view{
  margin-bottom: 20rpx;
  border-radius: 6rpx; 
}
.v-text{
  display: inline-block;
  padding: 0 14rpx;
  font-weight: bold;
  word-break: break-all;
  background-color: rgba(1, 1, 1, 0.3);
}
.cu-btn.share-btn{
  background-color: #fff;
  padding: 0 10rpx;
}
.scroll-img {
  white-space: nowrap;
}
.sendImgT{
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  background-repeat: no-repeat;
  background-size: 100%;
  background-position: center center;
  vertical-align: middle;
}
.bg-img-select {
  display: inline-block;
  width: 130rpx;
  height: 130rpx;
  margin: 0 20rpx;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center center;
}

.animationGift {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  top: 80%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center center;
  opacity: 0;
}

.view-gift {
  /** 第一种写法**/
  animation-name: viewgift;
  animation-duration: 2s;
  animation-timing-function: ease-out;
  animation-iteration-count: 1;
}

@keyframes viewgift {
  /** 第一种写法**/

  0% {
    opacity: 1;
  }

  50% {
    width: 150rpx;
    height: 150rpx;
    top: 52%;
    left: 25%;
    opacity: 0.8;
  }

  100% {
    width: 1rpx;
    height: 1rpx;
    top: 48%;
    left: 50%;
    opacity: 0;
  }
}

.gift-scroll {
  position: absolute;
  top: 59vh;
  height: 400rpx;
}

.gift-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
}

.bg-img-gift {
  display: inline-block;
  width: 98rpx;
  height: 98rpx;
  margin: 0 10rpx;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center center;
}
