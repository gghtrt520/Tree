<!--pages/saomu/daisao/daisao.wxml-->
<view style='background-image: url({{bgImg}});' class="scrollpage bg-white">
  <view class="content-saomu">
    <view class="title margin-bottom">
      <text class="bigTxt margin-right">云典</text>
      <text>代客祭扫</text>
    </view>
    <view class="bg-white inputContent">
      <view class="boder-bottom">
        <view>墓园名称：</view>
        <input placeholder="请输入墓园名称"></input>
      </view>
      <view>
        <view>祭扫日期：</view>
        <picker mode="date" value="{{date}}" start="2015-09-01" end="2020-09-01" bindchange="DateChange">
          <view class="picker">
            {{date}}
          </view>
        </picker>
      </view>
      <view>
        <view>开始时间：</view>
        <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="TimeChange">
          <view class="picker">
            {{time}}
          </view>
        </picker>
      </view>
      <view>
        <view>结束时间：</view>
        <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="TimeChange">
          <view class="picker">
            {{time}}
          </view>
        </picker>
      </view>
      <view>
        <view>预约人：</view>
        <view>
          <text>姓名：</text>
          <input></input>
        </view>
        <view>
          <text>手机：</text>
          <input></input>
        </view>
        <view>
          <text>身份证号：</text>
          <input></input>
        </view>
      </view>
    </view>
  </view>
  <view class="padding flex flex-direction">
    <button class="cu-btn bg-brown" bindtap="yuyueBtn">提交</button>
  </view>
</view>