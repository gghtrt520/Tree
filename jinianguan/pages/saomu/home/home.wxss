/* pages/saomu/daisao/daisao.wxss */
.scrollpage{
  height: 100vh;
  overflow: hidden;
}
.bg-imgs{
  background-repeat: no-repeat;
  background-size: 100% 100%;
  background-position: center center;
}
.content-saomu{
  padding: 5vh 10% 30rpx 10%;
}
.inputContent{
  border: 6rpx dashed #666;
  border-radius: 20rpx;
}
text,input{
  font-size: 32rpx;
}
.title{
  text-align: center;
}
.bigTxt{
  font-size: 50rpx;
  font-weight: bold;
}
.boder-bottom{
  border-bottom: 1rpx solid #999;
}
.picker{
  padding: 10rpx 0;
  font-size: 32rpx;
}
.title-input{
  padding: 10rpx 0;
  font-size: 32rpx;
}
.yuyue-people{
  background-color: #eee;
  padding: 10rpx;
}
.flex-input{
  display: flex;
  align-items: center;
}
.flex-input>input{
  flex: 1;
  font-size: 32rpx;
}
.flex-input>text{
  width: 160rpx;
}